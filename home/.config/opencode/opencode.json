{
  "$schema": "https://opencode.ai/config.json",
  // "theme": "catppuccin",
  "autoshare": false,
  "autoupdate": true,
  "disabled_providers": ["google-vertex-anthropic", "gitlab"],
  "command": {
    "handoff": {
      "description": "Compact and immediately start working on a goal",
      "template": "$ARGUMENTS"
    }
  },
  "agent": {
    "explore": {
      "model": "anthropic/claude-haiku-4-5"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "opensrc": {
      "type": "local",
      "command": ["npx", "-y", "opensrc-mcp"],
      "enabled": false
    },
    "playwriter": {
      "type": "local",
      "command": ["npx", "-y", "playwriter@latest"],
      "enabled": false
    },
    "atlassian-rovo": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true,
      "oauth": {}
    }
  },
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.envrc": "deny",
      "secrets/*": "deny"
    },
    "external_directory": {
      "/Users/ryanmiville/dev/opencode/*": "allow",
      "/Users/ryanmiville/.dotfiles/home/.config/opencode/*": "allow",
      "/Users/ryanmiville/.config/opencode/*": "allow"
    }
  }
}
